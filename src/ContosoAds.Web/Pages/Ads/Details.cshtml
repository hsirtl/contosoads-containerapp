@page "{id:int}"
@model ContosoAds.Web.Pages.Ads.DetailsModel

@{
    ViewData["Title"] = "Details";
}

<h2>All the details</h2>

<div>
    <h4>
        @Html.DisplayFor(model => model.Ad.Title)
    </h4>
    <hr/>
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Ad.Price)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Ad.Price)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Ad.Description)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Ad.Description)
        </dd>
        <dt class="col-sm-2">
            Image
        </dt>
        <dd class="col-sm-10">
            <img src="@Html.Raw(Model.Ad.ImageUri)" alt="@Model.Ad.Title" class="img-fluid" />
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Ad.PostedDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Ad.PostedDate)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Ad.Category)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Ad.Category)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Ad.Phone)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Ad.Phone)
        </dd>
    </dl>
</div>
<div>
    <a asp-page="./Edit" asp-route-id="@Model.Ad.Id" class="btn btn-primary btn-sm">Edit</a> |
    <a asp-page="./Index">Back to List</a>
</div>